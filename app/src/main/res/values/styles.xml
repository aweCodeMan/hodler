<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#07121a</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="Text.Title" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Text.Content" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text.Home.Title" parent="Text.Title">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Text.Home.Label" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
